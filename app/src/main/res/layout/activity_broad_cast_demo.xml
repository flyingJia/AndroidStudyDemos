<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">


    <Button
        android:id="@+id/button_staticRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="静态注册"/>
    <Button
        android:id="@+id/button_dynamicRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动态注册"/>

    <Button
        android:id="@+id/button_standardBroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标准广播"/>
    <Button
        android:id="@+id/button_orderedBroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有序广播"/>
    <Button
        android:id="@+id/button_localBroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本地广播"/>

</LinearLayout>